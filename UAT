  <script>
    async function sendData() {
      const inputValue = document.getElementById("userInput").value.trim();
      const responseBox = document.getElementById("responseBox");

      if (!inputValue) {
        responseBox.style.color = "#b91c1c";
        responseBox.textContent = "❌ Please enter something.";
        return;
      }

      responseBox.style.color = "#0f172a";
      responseBox.textContent = "⏳ Sending...";

      try {
        const response = await fetch("https://n8n.srv1140797.hstgr.cloud/webhook/News-Time", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ message: inputValue })
        });

        const data = await response.json();
        responseBox.style.color = "#166534";
        responseBox.textContent = `✔ Response: ${data.reply || JSON.stringify(data)}`;
      } catch (error) {
        responseBox.style.color = "#b91c1c";
        responseBox.textContent = "❌ Error communicating with server.";
      }
    }
	document.getElementById("userInput").addEventListener("keydown", function (event) {
  		if (event.key === "Enter") {
    		event.preventDefault();  // Prevents page refresh
    		sendData();
 	 	}
	});
  </script>

